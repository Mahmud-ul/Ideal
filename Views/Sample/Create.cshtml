
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>
@{
    int Serial = 1; 
}
<div class="box box-primary">
    <div class="box-header with-border">
        <h2 class="text-center">Add Product</h2><hr />
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <div class="row">
        <div class="col-md-8">
            <form method="post" asp-controller="Product" asp-action="Create">
                <div class="box-body">
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input type="text" class="form-control col-md-5" asp-for="Name" required="required" placeholder="Enter Product Name"><br>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BrandId">Brand Name</label>
                        <select class="form-control col-md-3" asp-for="BrandId">
                            <option value="">Choose Brand</option>
                            @foreach (CreateBrandViewModel item in ViewBag.Brands)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                        <span asp-validation-for="BrandId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description">Specification</label>
                        <textarea class="form-control col-md-5" asp-for="Description" rows="3" required="required" placeholder="Enter Product Description"></textarea><br>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="checkbox">
                        <label>
                            <input type="checkbox" asp-for="Status"> Status
                        </label>
                    </div>
                    <!-- form End -->
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-success">Create</button>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Back to List</a>
                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                </div>
            </form>
        </div>
    </div>
</div>
